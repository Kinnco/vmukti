<UserControl x:Class="VMukti.Presentation.Controls.CtlBuddyGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:Converters="clr-namespace:VMukti.Presentation.Converters"
    Name="ctlBuddyGrid" Width="0"
    Height="{Binding Height, ElementName=grdControl, Path=Height}" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
		<ResourceDictionary Source="..\UniResources.xaml"/>
	</UserControl.Resources>
	
	<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
	    <Grid Name="grdControl" Visibility="Collapsed" Height="0" Width="{Binding Width, ElementName=grdControl, Path=Width}" >
		</Grid>
    </ScrollViewer>

</UserControl>
