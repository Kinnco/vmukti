    <ajaxToolkit:AnimationExtender ID="hideBuddyExt" runat="server" TargetControlID="divShowBuddyList">
        <Animations>
            <OnClick>
                <Sequence>
                    <Case SelectScript="toolboxVisible('Module')">  
                        <Parallel Duration=".01" Fps="60">
                            <Length AnimationTarget="rightcolumn" PropertyKey="marginLeft" Property="style" StartValue="0" EndValue="-20" unit="%"/>  
                            <Length AnimationTarget="rightcolumn" PropertyKey="marginRight" Property="style" StartValue="-22" EndValue="0" unit="%"/>  
                            <Length AnimationTarget="contentcolumn" PropertyKey="marginRight" Property="style" StartValue="0" EndValue="20" unit="%"/>  
                        </Parallel>  
                        <Parallel Duration=".01" Fps="60">
                            <Length AnimationTarget="rightcolumn" PropertyKey="marginLeft" Property="style" StartValue="-20" EndValue="0" unit="%"/> 
                            <Length AnimationTarget="rightcolumn" PropertyKey="marginRight" Property="style" EndValue="-22" StartValue="0" unit="%"/> 
                            <Length AnimationTarget="contentcolumn" PropertyKey="marginRight" Property="style" StartValue="20" EndValue="0" unit="%"/>   
                        </Parallel>      
                    </Case> 
                    <ScriptAction Script="toggleShower('Module');" />
                </Sequence>                                          
            </OnClick>
        </Animations>
    </ajaxToolkit:AnimationExtender>
    <ajaxToolkit:AnimationExtender ID="hideModuleExt" runat="server" TargetControlID="divShowModuleExplorer">
        <Animations>
            <OnClick>
             <Sequence>
                    <Case SelectScript="toolboxVisible('Buddy')">  
                         <Parallel Duration=".05" Fps="60">
                            <Length AnimationTarget="leftcolumn" PropertyKey="marginLeft" Property="style" StartValue="-120" EndValue="-100" unit="%"/>  
                            <Length AnimationTarget="contentcolumn" PropertyKey="marginLeft" Property="style" StartValue="0" EndValue="20" unit="%"/>  
                        </Parallel>  
                        <Parallel Duration=".05" Fps="60">
                            <Length AnimationTarget="leftcolumn" PropertyKey="marginLeft" Property="style" StartValue="-100" EndValue="-120" unit="%"/> 
                            <Length AnimationTarget="contentcolumn" PropertyKey="marginLeft" Property="style" StartValue="20" EndValue="0" unit="%"/>  
                        </Parallel>      
                      </Case> 
                      <ScriptAction Script="toggleShower('Buddy');" />
                </Sequence>                                          
            </OnClick>        
        </Animations>
    </ajaxToolkit:AnimationExtender>
