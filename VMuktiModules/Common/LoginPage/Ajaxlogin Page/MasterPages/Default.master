        function toolboxVisible(mode)
        {
            var res = false;
            var div = null;
            var buttonText = "";
            if (mode == 'Buddy')
            {
                div = $get('<%=divShowBuddyList.ClientID %>');
                buttonText = "Buddy List";
            }
            else if (mode == 'Module')
            {
                div = $get('<%=divShowModuleExplorer.ClientID %>');
                buttonText = "Module Explorer";
            }
            if(div)
            {
                if(div.title == "Hide " + buttonText)
                {
                    res = true;
                }
            }
            return (res)?1:0;
        }
        function toggleShower(mode)
        {
            var res = false;
            var div = null;
            var buttonText = "";
            if (mode == 'Buddy')
            {
                div = $get('<%=divShowBuddyList.ClientID %>');
                buttonText = "Buddy List";
            }
            else if (mode == 'Module')
            {
                div = $get('<%=divShowModuleExplorer.ClientID %>');
                buttonText = "Module Explorer";
            }
            if(div)
            {
                if(div.title == "Hide " + buttonText)
                {
                    div.title = "Show " + buttonText;
                }
                else
                {
                    div.title="Hide " +  buttonText;
                }
            }
        }
        function closePanel(mode)
        {
            var ext = null;
            if (mode == 'Buddy')
            {
                ext = $find('<%=hideBuddyExt.ClientID %>');
            }
            else if (mode == 'Module')
            {
                ext = $find('<%=hideModuleExt.ClientID %>');
            }
            if(ext)
            {
                ext.OnClick();
            }
        }
        function changeButtonStyle(sender)
        {
            if(sender.className == 'arrowUp')
            {
                sender.className = 'arrowDown';
            }
            else
            {
                sender.className = 'arrowUp';
            }
        }
        
        function hidePanel(panel)
        {
            if(panel == 'settings')
            {
                var extPanel = $find('<%=settingsExtender.ClientID %>');
                if(extPanel)
                {
                    extPanel.hide();
                }
            }
        }
