<UserControl x:Class="DashBoard.Presentation.CampaignManagement.WindowMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="200" Width="180" Background="AntiqueWhite">
    <Grid Name="grdPopUp">        
        
        <Grid.RowDefinitions>
            <RowDefinition Name="grdCampaign"></RowDefinition>
            <RowDefinition Name="grdUsers"></RowDefinition>
            <RowDefinition Name="grdTreatment"></RowDefinition>
            <RowDefinition Name="grdGroup"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Name="txtCampaign" Grid.Row="0" Text=""/>
        <Button Name="btnPin" Height="20" Background="Green" Content="s" Width="20" HorizontalAlignment="Right" VerticalAlignment="Top" Click="btnPin_Click">
            
        </Button>
       <TreeView Name="trUsers" Grid.Row="1"> 
           <TreeViewItem Name="triUsers" Header="Users" Tag="Users"></TreeViewItem>
       </TreeView>
        <TreeView Name="trTreatment" Grid.Row="2">
            <TreeViewItem Name="triTreatment" Header="Treatment" Tag="Treatment"></TreeViewItem>    
        </TreeView>
        <TreeView Name="trGroup" Grid.Row="3">
            <TreeViewItem Name="triGroup" Header="Group" Tag="Group"></TreeViewItem>
        </TreeView>
       
    </Grid>
</UserControl>
