<UserControl x:Class="DashBoard.Presentation.CampaignManagement.Container"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="20" Width="100">
    <Grid Width="100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"></ColumnDefinition>
            <ColumnDefinition Width="30"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Width="70" Height="22"  Name="lblName" Grid.Column="0"></Label>
        <Button Width="30" BorderThickness="0" ToolTip="Delete" Height="20" Name="btnDelete" Grid.Column="1" ClickMode="Release" Click="btnDelete_Click">
            <Image Width="30" Height="15"  Name="imgDelete" Source="Images\Delete.png"></Image>
        </Button>
    </Grid>
</UserControl>
