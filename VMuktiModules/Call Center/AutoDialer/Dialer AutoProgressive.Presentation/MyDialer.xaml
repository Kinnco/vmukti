<UserControl x:Class="Dialer_AutoProgressive.Presentation.MyDialer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="93" Width="160" Margin="5,5,5,5"
    Name="ucMyDialer" MinHeight="93" MinWidth="160">
    
    <UserControl.Resources>
		
	</UserControl.Resources>

	<!--<Viewbox>-->
		<Canvas Name="cnvMain" Width="{Binding Width,ElementName=ucMyDialer}" Height="{Binding Height,ElementName=ucMyDialer}">
            <Canvas.Background>
            <LinearGradientBrush EndPoint="0.488,1" StartPoint="0.512,0">
                <GradientStop Color="#FF000000" Offset="0"/>
                <GradientStop Color="#FF25B0E7" Offset="1"/>
            </LinearGradientBrush>
        </Canvas.Background>
		<!--<Canvas Name="cnvMain" Width="200" Height="500" Background="{DynamicResource WindowBackgroundBrush}">-->
			<Button Name="btnManualDial" Canvas.Left="10" Canvas.Top="5" Width="140" Height="20" Content="Start Manual Dialing" ></Button>
			<Button Name="btnAutomaticDial" Canvas.Left="10" Canvas.Top="35" Width="140" Height="20" Content="Start Automatic Dialing" ></Button>
        <Label Canvas.Left="5" Canvas.Top="65" Height="28" Name="lblMessage" Width="150" Foreground="Red"></Label>
		</Canvas>
	<!--</Viewbox>-->

</UserControl>
