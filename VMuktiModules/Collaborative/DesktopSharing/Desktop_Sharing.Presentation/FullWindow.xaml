<Window x:Class="Desktop_Sharing.Presentation.FullWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="FullWindow" Height="768"  Width="1024" AllowsTransparency="True" WindowStyle="None" WindowState="Maximized" >
    <Grid Name="grdFullScreen">
        <Grid.RowDefinitions>
            <RowDefinition Name="grdButton" Height="0"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Canvas Name="cnvButton" Grid.Row="0" Width="1024" Visibility="Visible" Height="0" VerticalAlignment="Top">
            <TextBox Name="txtInp" Height="0"  Width="1024" Background="Transparent" Visibility="Visible"></TextBox>            
        </Canvas>          
        <Image Name="imgFullScreen" Grid.Row="1" Height="768" Width="1024">            
        </Image>        
    </Grid>
</Window>
